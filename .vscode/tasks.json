                {
                        "label": "✅ Clear Emergency Stop",
                        "type": "shell",
                        "command": "source install/setup.bash && ros2 topic pub --once /emergency_stop std_msgs/Bool 'data: false'",
                        "presentation": {
                                "panel": "new",
                                "group": "testing",
                                "showReuseMessage": false
